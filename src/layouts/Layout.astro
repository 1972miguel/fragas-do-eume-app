---
import '../styles/global.css';
// ¡Aquí va el import! Debe ser lo primero o muy arriba
import Header from '../components/Header.astro';  // ruta relativa correcta

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    
    <title>{title}</title>
  </head>
  <body>
    <Header />   <!-- Ahora TS lo reconoce -->

    <main class="container mx-auto p-4">
      <slot />
    </main>

    <footer class="text-center py-4 bg-gray-100">© 2026 Tu App Fragas</footer>
  </body>
</html>